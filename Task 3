    #display {
      font-size: 3em;
      margin: 20px 0;
      letter-spacing: 2px;
      animation: pulse 1s infinite;
    }

    @keyframes pulse {
      0%, 100% {
        text-shadow: 0 0 10px cyan;
      }
      50% {
        text-shadow: 0 0 20px cyan;
      }
    }

    .buttons {
      display: flex;
